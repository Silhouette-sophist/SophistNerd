<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="author name"
        android:textSize="10sp"
        android:layout_below="@id/item_image_view"
        android:paddingStart="10dp"/>

    <TextView
        android:id="@+id/create_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_name"
        android:layout_alignStart="@id/item_image_view"
        android:text="create at"
        android:textSize="8sp"
        android:paddingStart="10dp"/>

    <ImageView
        android:id="@+id/favor_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_image_view"
        android:layout_alignEnd="@id/item_image_view"
        android:src="@drawable/ic_baseline_favorite_24"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/favor_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_image_view"
        android:layout_alignBottom="@id/favor_icon"
        android:layout_toLeftOf="@id/favor_icon"
        android:gravity="center_vertical"
        android:text="like counts"
        android:textSize="8sp" />

</RelativeLayout>
